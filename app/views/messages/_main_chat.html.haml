.main-chat
  .message-group
    .group-left
      .group-name 
      .group-user 
        .member-name
        .user-name
    = link_to "Edit", "#" ,class: "group-btn"

  .message-list
    .list
      .message-user-name
        .message-name
        .posting-time
      .message-comment

  .message-form
    .form
      %form
        .input-box
          %input{type: "text", class: "input-box__text", placeholder: "type a message"}
          %label{class: "input-box__image"}
            = icon('fas', 'image')
            %input{type: "file", class: "input-box__image__file"}
        %input{type: "submit", value: "Send", class: "submit-btn"}